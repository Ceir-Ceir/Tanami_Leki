<script>
  (function() {
    const launcher = document.getElementById('lekiLauncher');
    const windowEl = document.getElementById('lekiWindow');
    const closeBtn = document.getElementById('lekiClose');
    const sendBtn = document.getElementById('lekiSend');
    const inputEl = document.getElementById('lekiInput');
    const messagesEl = document.getElementById('lekiMessages');
    const typingEl = document.getElementById('lekiTyping');
    const teaserEl = document.getElementById('lekiTeaser');

    let isOpen = false;

    // --- Anonymous ID Management (syncs with tracking script) ---
    function getCookie(name) {
      const match = document.cookie.match(new RegExp('(^| )' + name + '=([^;]+)'));
      return match ? match[2] : null;
    }

    function setCookie(name, value, days) {
      const expires = new Date(Date.now() + days * 864e5).toUTCString();
      document.cookie = name + '=' + value + '; expires=' + expires + '; path=/; SameSite=Lax';
    }

    function generateUUID() {
      return 'xxxxxxxx-xxxx-4xxx-yxxx-xxxxxxxxxxxx'.replace(/[xy]/g, function(c) {
        const r = Math.random() * 16 | 0;
        const v = c === 'x' ? r : (r & 0x3 | 0x8);
        return v.toString(16);
      });
    }

    function getAnonymousId() {
      // Try to get existing anonymous_id from cookie (same as tracking script uses)
      let anonId = getCookie('leki_anon_id');
      if (!anonId) {
        // Generate new one and set cookie
        anonId = generateUUID();
        setCookie('leki_anon_id', anonId, 365);
      }
      return anonId;
    }

    const anonymousId = getAnonymousId();

    // Toggle Window
    function toggleChat() {
      isOpen = !isOpen;
      if (isOpen) {
        windowEl.classList.add('open');
        launcher.classList.add('chat-open');
        teaserEl.classList.add('hidden');
        setTimeout(() => inputEl.focus(), 300);
      } else {
        windowEl.classList.remove('open');
        launcher.classList.remove('chat-open');
      }
    }

    launcher.addEventListener('click', toggleChat);
    closeBtn.addEventListener('click', toggleChat);
    teaserEl.addEventListener('click', toggleChat);

    // Append Message
    function appendMessage(text, sender) {
      const div = document.createElement('div');
      div.classList.add('leki-msg');
      div.classList.add(sender === 'user' ? 'leki-msg-user' : 'leki-msg-bot');
      div.textContent = text;
      
      // Insert before typing indicator
      messagesEl.insertBefore(div, typingEl);
      scrollToBottom();
    }

    function scrollToBottom() {
      messagesEl.scrollTop = messagesEl.scrollHeight;
    }

    // Show/Hide Typing
    function setTyping(isTyping) {
      if (isTyping) {
        typingEl.classList.add('show');
      } else {
        typingEl.classList.remove('show');
      }
      scrollToBottom();
    }

    // Send Message
    async function sendMessage() {
      const text = inputEl.value.trim();
      if (!text) return;

      // Clear input
      inputEl.value = '';

      // Add User Message
      appendMessage(text, 'user');

      // AI Logic
      setTyping(true);

      try {
        const response = await fetch('https://tanami-leki-1gnn.onrender.com/api/chat', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ 
            message: text,
            anonymous_id: anonymousId
          })
        });
        
        const data = await response.json();
        
        setTyping(false);
        
        if (data.error) {
           appendMessage("Something went wrong. Please try again.", 'bot');
        } else {
           appendMessage(data.answer, 'bot');
        }

      } catch (err) {
        console.error(err);
        setTyping(false);
        appendMessage("Network error. Please check your connection.", 'bot');
      }
    }

    sendBtn.addEventListener('click', sendMessage);
    inputEl.addEventListener('keypress', (e) => {
      if (e.key === 'Enter') sendMessage();
    });

  })();
</script>
