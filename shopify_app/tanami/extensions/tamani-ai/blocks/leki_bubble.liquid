{% schema %}
  {
    "name": "Leki AI Chat",
    "target": "body",
    "settings": [
      { "type": "color", "id": "accent_color", "label": "Accent Color", "default": "#FFFFFF" }
    ]
  }
{% endschema %}

<!-- Font -->
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

<style>
  :root {
    --leki-black: #0a0a0a;
    --leki-charcoal: #1a1a1a;
    --leki-dark-grey: #2a2a2a;
    --leki-medium-grey: #3a3a3a;
    --leki-light-grey: #4a4a4a;
    --leki-white: #FFFFFF;
    --leki-text-muted: #999999;
    --leki-font: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    --leki-accent: {{ block.settings.accent_color }};
  }

  /* Chat Launcher Button */
  .leki-launcher {
    position: fixed;
    bottom: 24px;
    right: 24px;
    width: 64px;
    height: 64px;
    background-color: var(--leki-black);
    border: 2px solid var(--leki-white);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    box-shadow: 0 8px 32px rgba(0,0,0,0.4), 0 0 15px rgba(255,255,255,0.15);
    z-index: 2147483647;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
    padding: 0;
    animation: launcherBounce 2s ease-in-out infinite;
  }
  .leki-launcher:hover {
    transform: scale(1.08);
    box-shadow: 0 12px 40px rgba(0,0,0,0.5), 0 0 25px rgba(255,255,255,0.25);
    animation: none;
  }
  .leki-launcher.chat-open {
    animation: none;
  }
  .leki-launcher img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
  }

  /* Teaser Chat Bubble */
  .leki-teaser {
    position: fixed;
    bottom: 95px;
    right: 24px;
    background-color: var(--leki-white);
    color: var(--leki-black);
    padding: 14px 18px;
    border-radius: 18px 18px 4px 18px;
    font-size: 14px;
    font-weight: 500;
    max-width: 220px;
    box-shadow: 0 8px 24px rgba(0,0,0,0.3);
    z-index: 2147483646;
    cursor: pointer;
    animation: teaserFadeIn 0.5s ease 1s forwards, teaserPulse 3s ease-in-out 1.5s infinite;
    opacity: 0;
    transition: transform 0.2s, box-shadow 0.2s;
  }
  .leki-teaser:hover {
    transform: scale(1.03);
    box-shadow: 0 10px 30px rgba(0,0,0,0.4);
  }
  .leki-teaser.hidden {
    display: none;
  }
  .leki-teaser::after {
    content: '';
    position: absolute;
    bottom: -8px;
    right: 20px;
    width: 0;
    height: 0;
    border-left: 10px solid transparent;
    border-right: 10px solid transparent;
    border-top: 10px solid var(--leki-white);
  }

  @keyframes launcherBounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-8px); }
  }
  @keyframes teaserFadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }
  @keyframes teaserPulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.02); }
  }

  /* Chat Window Container */
  .leki-window {
    position: fixed;
    bottom: 100px;
    right: 24px;
    width: 380px;
    height: 580px;
    max-height: 80vh;
    background-color: var(--leki-charcoal);
    border: 1px solid var(--leki-dark-grey);
    border-radius: 20px;
    box-shadow: 0 20px 60px rgba(0,0,0,0.6);
    display: none;
    flex-direction: column;
    z-index: 2147483647;
    font-family: var(--leki-font);
    overflow: hidden;
    opacity: 0;
    transform: translateY(20px) scale(0.95);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  .leki-window.open {
    display: flex;
    opacity: 1;
    transform: translateY(0) scale(1);
  }

  /* Hero Header with Background Image */
  .leki-header {
    position: relative;
    height: 120px;
    background-image: url('{{ "lekilogo.jpg" | asset_url }}');
    background-size: cover;
    background-position: center;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 16px 20px;
  }
  .leki-header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(to bottom, rgba(0,0,0,0.2), rgba(26,26,26,0.95));
  }
  .leki-header-content {
    position: relative;
    z-index: 1;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
  }
  .leki-title-area {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }
  .leki-title {
    color: var(--leki-white);
    font-weight: 700;
    font-size: 18px;
    letter-spacing: 0.5px;
  }
  .leki-subtitle {
    color: var(--leki-text-muted);
    font-size: 12px;
    font-weight: 400;
  }
  .leki-close {
    background: rgba(255,255,255,0.1);
    border: none;
    color: var(--leki-white);
    font-size: 20px;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background 0.2s;
    position: relative;
    z-index: 1;
  }
  .leki-close:hover {
    background: rgba(255,255,255,0.2);
  }

  /* Messages Area */
  .leki-messages {
    flex: 1;
    padding: 20px;
    overflow-y: auto;
    background-color: var(--leki-charcoal);
    background-image: linear-gradient(rgba(26, 26, 26, 0.85), rgba(26, 26, 26, 0.85)), url('{{ "Lekicoolbike.png" | asset_url }}');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }
  
  /* Custom Scrollbar */
  .leki-messages::-webkit-scrollbar { 
    width: 6px; 
  }
  .leki-messages::-webkit-scrollbar-thumb { 
    background-color: var(--leki-light-grey); 
    border-radius: 3px; 
  }
  .leki-messages::-webkit-scrollbar-track { 
    background: transparent; 
  }

  /* Message Bubbles - Base */
  .leki-msg {
    max-width: 85%;
    padding: 12px 16px;
    font-size: 14px;
    line-height: 1.5;
    position: relative;
    animation: fadeSlideIn 0.3s ease;
  }
  
  /* Bot Messages - Left Aligned */
  .leki-msg-bot {
    align-self: flex-start;
    background-color: var(--leki-dark-grey);
    color: var(--leki-white);
    border-radius: 4px 18px 18px 18px;
    margin-left: 8px;
  }
  .leki-msg-bot::before {
    content: '';
    position: absolute;
    left: -8px;
    top: 0;
    width: 0;
    height: 0;
    border-top: 8px solid var(--leki-dark-grey);
    border-left: 8px solid transparent;
  }
  
  /* User Messages - Right Aligned */
  .leki-msg-user {
    align-self: flex-end;
    background-color: var(--leki-medium-grey);
    color: var(--leki-white);
    border-radius: 18px 4px 18px 18px;
    margin-right: 8px;
  }
  .leki-msg-user::before {
    content: '';
    position: absolute;
    right: -8px;
    top: 0;
    width: 0;
    height: 0;
    border-top: 8px solid var(--leki-medium-grey);
    border-right: 8px solid transparent;
  }

  /* Input Area */
  .leki-input-area {
    padding: 16px 20px;
    background-color: var(--leki-black);
    display: flex;
    align-items: center;
    gap: 12px;
    border-top: 1px solid var(--leki-dark-grey);
  }
  .leki-input {
    flex: 1;
    background: var(--leki-dark-grey);
    border: 1px solid var(--leki-medium-grey);
    border-radius: 24px;
    color: var(--leki-white);
    padding: 12px 18px;
    font-family: var(--leki-font);
    font-size: 14px;
    outline: none;
    transition: border-color 0.2s, box-shadow 0.2s;
  }
  .leki-input::placeholder {
    color: var(--leki-text-muted);
  }
  .leki-input:focus {
    border-color: var(--leki-white);
    box-shadow: 0 0 0 2px rgba(255,255,255,0.1);
  }
  .leki-send-btn {
    background: var(--leki-white);
    border: none;
    border-radius: 50%;
    width: 44px;
    height: 44px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.2s, box-shadow 0.2s;
  }
  .leki-send-btn:hover {
    transform: scale(1.05);
    box-shadow: 0 4px 12px rgba(255,255,255,0.2);
  }
  .leki-send-btn svg {
    width: 20px;
    height: 20px;
    color: var(--leki-black);
    margin-left: 2px;
  }

  /* Typing Indicator */
  .leki-typing {
    display: none;
    align-self: flex-start;
    gap: 6px;
    padding: 14px 18px;
    background-color: var(--leki-dark-grey);
    border-radius: 4px 18px 18px 18px;
    margin-left: 8px;
  }
  .leki-typing.show {
    display: flex;
  }
  .leki-dot {
    width: 8px;
    height: 8px;
    background-color: var(--leki-text-muted);
    border-radius: 50%;
    animation: bounce 1.4s infinite ease-in-out both;
  }
  .leki-dot:nth-child(1) { animation-delay: -0.32s; }
  .leki-dot:nth-child(2) { animation-delay: -0.16s; }

  @keyframes bounce {
    0%, 80%, 100% { transform: scale(0.6); opacity: 0.4; }
    40% { transform: scale(1); opacity: 1; }
  }
  @keyframes fadeSlideIn {
    from { 
      opacity: 0; 
      transform: translateY(8px); 
    }
    to { 
      opacity: 1; 
      transform: translateY(0); 
    }
  }

  /* Responsive */
  @media (max-width: 420px) {
    .leki-window {
      right: 12px;
      left: 12px;
      width: auto;
      bottom: 90px;
    }
    .leki-launcher {
      right: 16px;
      bottom: 16px;
      width: 56px;
      height: 56px;
    }
  }
</style>

